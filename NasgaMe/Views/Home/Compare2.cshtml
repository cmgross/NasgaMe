@model NasgaMe.Models.Search
<div class="well">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "addForm2", role = "form", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Add Athlete</legend>
            <div class="form-group">
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.NameAndClass, new { @id = "NameAndClass", @class = "form-control", @placeholder = "Athlete Name", @data_provide = "typeahead", @autocomplete = "off" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
            @Html.ValidationSummary()
        </fieldset>
    }
</div>
@Html.DropDownList("ddlThrows", Model.Throws, new { @class = "form-control" })
<br/>
@*<div class="table-responsive hide" id="dAthletePRs">*@
    <table class="table table-bordered table-hover table-condensed text-center sortable results-table hide" id="tbAthletePRs">
        <thead>
            <tr>
                <th data-defaultsort="disabled"></th>
                <th class="text-center">Name</th>
                <th class="text-center">Class</th>
                <th class="text-center throwsColumn Braemar">Braemar</th>
                <th class="text-center throwsColumn Open">Open</th>
                <th class="text-center throwsColumn HWFD">HWFD</th>
                <th class="text-center throwsColumn LWFD">LWFD</th>
                <th class="text-center throwsColumn HH">HH</th>
                <th class="text-center throwsColumn LH">LH</th>
                <th class="text-center throwsColumn Caber">Caber</th>
                <th class="text-center throwsColumn Sheaf">Sheaf</th>
                <th class="text-center throwsColumn WFH">WFH</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
@*</div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/search")
    @Scripts.Render("~/bundles/compare2")
}
