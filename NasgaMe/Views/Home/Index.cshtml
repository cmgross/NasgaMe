@model NasgaMe.Models.Search
<div class="well">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "searchForm", role = "form", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Search Athlete Records</legend>
            <div class="form-group">
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.NameAndClass, new { @id = "NameAndClass", @class = "form-control", @placeholder = "Athlete Name", @data_provide = "typeahead", @autocomplete = "off" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                    @*<button class="btn btn-default">Clear</button>*@
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
            @Html.ValidationSummary()
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/search")
}