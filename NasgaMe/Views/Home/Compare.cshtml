@model NasgaMe.Models.Search
<div class="well">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "addForm", role = "form", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Add Athlete</legend>
            <div class="form-group">
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.NameAndClass, new { @id = "NameAndClass", @class = "form-control", @placeholder = "Athlete Name", @data_provide = "typeahead", @autocomplete = "off" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
            @Html.ValidationSummary()
        </fieldset>
    }
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-condensed text-center sortable results-table" id="tbAthletePRs">
        <thead>
            <tr>
                <th data-defaultsort="disabled"></th>
                <th class="text-center">Name</th>
                <th class="text-center">Class</th>
                <th class="text-center">Braemar</th>
                <th class="text-center">Open</th>
                <th class="text-center">HWFD</th>
                <th class="text-center">LWFD</th>
                <th class="text-center">HH</th>
                <th class="text-center">LH</th>
                <th class="text-center">Caber</th>
                <th class="text-center">Sheaf</th>
                <th class="text-center">WFH</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/search")
    @Scripts.Render("~/bundles/compare")
}
